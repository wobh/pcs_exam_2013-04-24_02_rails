= form_for @card do |f|
  - if @card.errors.any?
    #error_explanation
      %h2= "#{pluralize(@card.errors.count, "error")} prohibited this card from being saved:"
      %ul
        - @card.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :color
    = f.text_field :color
  .field
    = f.label :family
    = f.text_field :family
  .field
    = f.label :number
    = f.number_field :number
  .actions
    = f.submit 'Save'
